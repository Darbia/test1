#header {
    height: 50px;
    background-color: #ff841d;
    border-bottom: 1px solid #e6e6e6;
    position: relative;
    vertical-align: middle;
    text-align: center;
    >.logo {
        padding: 10px;
        margin-left: 5px;
        width: 40px;
        float: left;
        >a {
            >img {
                max-width: 25px;
            }
        }
    }
    >h1 {
        padding-left: 40px;
        padding-right: 40px;
        width: 100%;
        font-size: 20px;
        font-weight: bold;
        color: #fff;
        padding-top: 8px;
    }
}

.product {
    padding: 15px 10px;
    position: relative;
    >h3 {
        font-size: 18px;
        color: #5a5a5a;
        font-weight: bold;
    }
    >.info {
        >span {
            color: #999999;
            line-height: 50px;
        }
    }
    >.content {
        font-size: 16px;
        color: #606060;
        font-family: arial;
        line-height: 24px;
        >img {
            vertical-align: middle;
            float: right;
        }
    }
}
